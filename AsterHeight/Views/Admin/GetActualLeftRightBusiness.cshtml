@model AsterHeight.Models.Reports
@{
    ViewBag.Title = "GetActualLeftRightBusiness";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #divload {
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 9999;
        background: url("../files/assets/images/login-gif-11.gif") no-repeat center center rgba(0,0,0,0.25);
    }

    .errortext {
        border: 1px solid red !important;
    }
</style>
<div class="loader" id="divload"></div>
@using (Html.BeginForm("GetActualLeftRightBusiness", "Admin", FormMethod.Post, new { @id = "form1" }))
{
    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Reports</li>
            <li class="breadcrumb-item">Get Actual Left Right Business</li>
        </ul>
    </section>
    <span></span>
    <div class="section-body">
        <div class="card">
            <div class="card-header">
                <p style="color: red">
                    @TempData["PayPayout"]

                </p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-md-3">
                                LoginId
                                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Login Id" })
                            </div>
                            <div class="col-md-3">
                                From Date
                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @placeholder = "From Date",@readonly="readonly" })
                            </div>
                            <div class="col-md-3">
                                To Date
                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @placeholder = "To Date", @readonly = "readonly" })
                            </div>

                            <div class="col-md-3">
                                <input type="submit" class="btn btn-info" value="Search" name="Search" style="margin-top:20px;" />
                            </div>

                        </div>
                        <br />
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" data-page-length='50' id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Login Id</th>
                                        <th>Name</th>
                                        <th>Joining Date</th>
                                        <th>Left Business</th>
                                        <th>Right Business</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.ActualLeftRightBusinessList != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.ActualLeftRightBusinessList)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.JoiningDate</td>
                                                    <td>@Item.LeftBusiness</td>
                                                    <td>@Item.RightBusiness</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>
    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
       
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true

    });
</script>


