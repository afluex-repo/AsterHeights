            $("#TransactionNo_" + index).attr("placeholder", "Cheque No.");
            $("#TransactionDate_" + index).attr("placeholder", "Cheque Date");
        }
        else if (paymentmode == '3') {
            $("#divPaymentDate_" + index).show();
            $("#divtransactiono_" + index).show();
