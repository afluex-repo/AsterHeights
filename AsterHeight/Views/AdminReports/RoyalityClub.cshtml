@model AsterHeight.Models.Reports

@{
    ViewBag.Title = "RoyalityClub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

@using (Html.BeginForm("RoyalityClub", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Reward</li>
            <li class="breadcrumb-item">Royality Club List</li>
        </ul>
    </section>

    <div class="section-body">

        <div class="card">
            <div class="card-header">
                <h4>Royality Club List</h4>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- HTML5 Export Buttons table start -->
                        <div class="card-block" style="margin-left:5px;margin-right:5px">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" data-page-length='50' id="tableExport" style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th>S No.</th>
                                            <th>Login Id</th>
                                            <th>Business</th>
                                            <th>Calculation Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstReward != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.lstReward)
                                                {
                                                    <tr class="text-left">
                                                        <td>@i</td>
                                                        <td>@Item.LoginId</td>
                                                        <td>@Item.MatchingTarget</td>
                                                        <td>@Item.QualifyDate</td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

