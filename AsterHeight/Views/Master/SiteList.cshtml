@model AsterHeight.Models.Master

@{
    ViewBag.Title = "SiteList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SiteList", "Master", FormMethod.Post, new { @id = "form1" }))
{


    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item">Site List</li>
        </ul>
    </section>


    <div class="section-body">

        <div class="card">
            <div class="card-header">
                <h4>Site List</h4>

                <p style="color: red">
                    @TempData["Site"]
                </p>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- HTML5 Export Buttons table start -->
                      
                            <div class="card-header table-card-header">
                               
                                <a class="btn btn-primary btn-sm" style="margin-left:75%;margin-top:5px;" href="/Master/SiteMaster">Add New</a>
                            </div>
                            <div class="card-block">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-md" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th>S No.</th>
                                                <th>SiteName</th>
                                                <th>Site Type</th>
                                                <th>Location</th>
                                                <th>Rate</th>
                                                <th>Unit</th>
                                                <th>Development Charge</th>
                                                <th></th>
                                            </tr>

                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstSite != null)
                                                {
                                                    int i = 1;
                                                    foreach (var Item in Model.lstSite)
                                                    {
                                                        <tr class="text-left">
                                                            <td>@i</td>
                                                            <td>@Item.SiteName</td>
                                                            <td>@Item.SiteTypeName</td>
                                                            <td>@Item.Location</td>
                                                            <td>@Item.Rate</td>
                                                            <td>@Item.UnitName</td>
                                                            <td>@Item.DevelopmentCharge</td>
                                                            <td>
                                                                <a href="/Master/SiteMaster?SiteID=@Item.EncryptKey" class="btn btn-info btn-sm">Edit</a>
                                                                <a href="/Master/DeleteSite?id=@Item.SiteID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this Site?');">Delete</a>
                                                            </td>

                                                        </tr>

                                                        i++;
                                                    }
                                                }
                                            }

                                        </tbody>

                                    </table>
                                </div>
                            </div>
                       
                    </div>
                </div>



            </div>
        </div>
    </div>
}

