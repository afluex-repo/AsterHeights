@model AsterHeight.Models.Master

@{
    ViewBag.Title = "NewsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("NewsList", "Master", FormMethod.Post, new { @id = "form1" }))
{
    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item">News List</li>
        </ul>
    </section>
    

    <div class="section-body">
      
            <div class="card">
                <div class="card-header">
                    <h4>News List</h4>

                    <p style="color: red">
                        @TempData["News"]
                    </p>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-header">
                                <a class="btn btn-primary btn-sm" style="margin-left:89%;" href="/Master/NewsMaster">Add New</a>
                            </div>
                          
                            <!-- HTML5 Export Buttons table start -->
                                <div class="card-block">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-md" data-page-length='50' id="tableExport" style="width:100%;">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Heading</th>
                                                    <th>Body</th>
                                                    <th>News For</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstBlock1 != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstBlock1)
                                                        {
                                                            <tr class="text-left">
                                                                <td>@i</td>
                                                                <td>@Item.NewsHeading</td>
                                                                <td>@Item.NewsBody</td>
                                                                <td>@Item.NewsFor</td>
                                                                <td>
                                                                    <a href="/Master/NewsMaster?NewsID=@Item.NewsID" class="btn btn-info btn-sm">Edit</a>
                                                                    <a href="/Master/DeleteNews?id=@Item.NewsID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this News?');">Delete</a>
                                                                </td>

                                                            </tr>

                                                            i++;
                                                        }
                                                    }
                                                }

                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                           
                        </div>
                    </div>

                </div>

            </div>
        </div>
}
