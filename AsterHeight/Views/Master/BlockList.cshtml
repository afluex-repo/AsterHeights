@model AsterHeight.Models.Master

@{
    ViewBag.Title = "BlockList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("BlockList", "Master", FormMethod.Post, new { @id = "form1" }))
{



    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item">Block List</li>
        </ul>
    </section>


    <div class="section-body">

        <div class="card">
            <div class="card-header">
                <h4>Block List</h4>

                <p style="color: red">
                    @TempData["BlockMaster"]
                </p>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- HTML5 Export Buttons table start -->
                    
                            <div class="card-header table-card-header">

                                <a class="btn btn-primary btn-sm" style="margin-left:75%;margin-top:5px;" href="/Master/BlockMaster">Add New</a>
                            </div>
                            <div class="card-block">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-md" data-page-length='50' id="tableExport" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th>S No.</th>
                                                <th>SiteName</th>
                                                <th>Sector Name</th>
                                                <th>Block Name</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstBlock1 != null)
                                                {
                                                    int i = 1;
                                                    foreach (var Item in Model.lstBlock1)
                                                    {
                                                        <tr class="text-left">
                                                            <td>@i</td>
                                                            <td>@Item.SiteName</td>
                                                            <td>@Item.SectorName</td>
                                                            <td>@Item.BlockName</td>
                                                            <td>
                                                                <a href="/Master/BlockMaster?BlockID=@Item.BlockID" class="btn btn-info btn-sm">Edit</a>
                                                                <a href="/Master/DeleteBlock?id=@Item.BlockID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this Block?');">Delete</a>
                                                            </td>

                                                        </tr>

                                                        i++;
                                                    }
                                                }
                                            }

                                        </tbody>

                                    </table>
                                </div>
                        
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
}


