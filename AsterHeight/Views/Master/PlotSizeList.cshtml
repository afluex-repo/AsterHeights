@model AsterHeight.Models.Master

@{
    ViewBag.Title = "PlotSizeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("PlotSizeList", "Master", FormMethod.Post, new { @id = "form1" }))
{


    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item">Plot Size List</li>
        </ul>
    </section>


    <div class="section-body">

        <div class="card">
            <div class="card-header">
                <h4>Plot Size List</h4>

                <p style="color: red">
                    @TempData["PlotSize"]
                </p>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- HTML5 Export Buttons table start -->
                      
                            <div class="card-header table-card-header">
                                <a class="btn btn-primary btn-sm" style="margin-left:75%;margin-top:5px" href="/Master/PlotSizeMaster">Add New</a>
                            </div>
                            <div class="card-block">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-md" data-page-length='50' id="tableExport" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th>S No.</th>
                                                <th>Width Feet</th>
                                                <th>Width Inch</th>
                                                <th>Height Feet</th>
                                                <th>Height Inch</th>
                                                <th>Plot Area</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstSite != null)
                                                {
                                                    int i = 1;
                                                    foreach (var Item in Model.lstSite)
                                                    {
                                                        <tr class="text-left">
                                                            <td>@i</td>
                                                            <td>@Item.WidthFeet</td>
                                                            <td>@Item.WidthInch</td>
                                                            <td>@Item.HeightFeet</td>
                                                            <td>@Item.HeightInch</td>
                                                            <td>@Item.PlotArea</td>
                                                            <td>
                                                                <a href="/Master/PlotSizeMaster?plotSizeID=@Item.EncryptKey" class="btn btn-info btn-sm">Edit</a>
                                                                <a href="/Master/DeletePlotSize?id=@Item.PlotSizeID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this Plot Size?');">Delete</a>
                                                            </td>

                                                        </tr>
                                                        i++;
                                                    }

                                                }
                                            }

                                        </tbody>

                                    </table>
                                </div>
                            </div>
                    
                    </div>
                </div>



            </div>
        </div>
    </div>
}




