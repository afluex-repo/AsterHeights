@model AsterHeight.Models.Customer

@{
    ViewBag.Title = "LuckyDrawReport";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

@using (Html.BeginForm("LuckyDrawReport", "CustomerDashboard", FormMethod.Post, new { @id = "form1" }))
{
    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Report</li>
            <li class="breadcrumb-item">Lucky Draw Report</li>
        </ul>
    </section>


    <div class="section-body">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Lucky Draw Report</h4>


                </div>
                <div class="card-body">
               
                    <div class="dt-responsive table-responsive">
                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>S No.</th>
                                    <th>Customer ID</th>
                                    <th>Customer Name</th>
                                    <th>Associate ID</th>
                                    <th>Associate Name</th>
                                    <th>Mobile Number</th>
                                    <th>Payment Mode</th>
                                    <th>Amount</th>
                                    <th>Coupon No</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                               @if (Model != null)
                               {
                                   if (Model.ListCust != null)
                                   {
                                       int i = 1;
                                       foreach (var Item in Model.ListCust)
                                       {
                                        <tr class="text-left">

                                            <td>@i</td>
                                            <td>@Item.CustomerLoginID</td>
                                            <td>@Item.CustomerName</td>
                                            <td>@Item.AssociateID</td>
                                            <td>@Item.AssociateName</td>
                                            <td>@Item.Contact</td>
                                            <td>@Item.PaymentMode</td>
                                            <td>@Item.Amount</td>
                                            <th>@Item.CouponNo</th>
                                            <td>
                                                <a href="/CustomerDashboard/PrintLuckyDrawReceipt?LuckyDrawId=@Item.LuckyDrawId" target="_blank" style="margin-top:5px;" class="btn btn-info btn-sm">Print Receipt</a>

                                        </tr>
                                           i++;
                                       }
                                   }
                               }
                            </tbody>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


<script src="../..//WebsiteCss/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">






